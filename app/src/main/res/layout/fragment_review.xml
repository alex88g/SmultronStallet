<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#75DDB2C1"
    android:background="@drawable/smul_back"
    tools:context=".CameraActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="256dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:contextClickable="false"
        android:src="@drawable/ditt_smultron_stalle_bild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/DittsmultronPlace1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#75DDB2C1"
        android:gravity="center"
        android:hint="Ditt smultronStÃ¤lle"
        android:textColorHint="#FAF8F8"
        app:layout_constraintBottom_toTopOf="@+id/ReviewS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraButtonSmultron"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ReviewS"
        android:layout_width="416dp"
        android:layout_height="87dp"
        android:layout_marginBottom="32dp"
        android:background="#75DDB2C1"
        android:gravity="center"
        android:textColorHint="#FAF8F8"
        android:hint="@string/recension"
        app:layout_constraintBottom_toTopOf="@+id/buttonSmultronSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DittsmultronPlace1"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonSmultronSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#75DDB2C1"
        android:text="Spara!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReviewS"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/cameraButtonSmultron"
        android:layout_width="53dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toTopOf="@+id/DittsmultronPlace1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@android:drawable/ic_menu_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>